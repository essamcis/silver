<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="membership_products_form_inherit" model="ir.ui.view">
            <field name="name">product.template.member.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="membership.membership_products_form"/>
            <field name="arch" type="xml">

                <xpath expr="//label[@for='membership_date_from']" position="before">
                    <field name="member_type"/>
                    <field name="duration"
                           attrs="{'invisible':[('member_type','!=','duration')],'required':[('member_type','=','duration')]}"/>
                </xpath>

                <xpath expr="//label[@for='membership_date_from']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//form/group/group[last()]/div" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='membership_date_from']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>

                <xpath expr="//field[@name='membership_date_to']" position="attributes">
                    <attribute name="required">0</attribute>
                </xpath>

            </field>
        </record>


        <record id="membership_products_tree_inherit" model="ir.ui.view">
            <field name="name">product.template</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="membership.membership_products_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='membership_date_from']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='membership_date_to']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <xpath expr="//field[@name='name']" position="after">
                    <field name="member_type"/>
                    <field name="duration"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>