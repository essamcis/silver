<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.membership.resume</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="membership.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='member_lines']" position="before">
                    <button name="action_membership_update" type="object" string="Membership Update"
                            class="oe_highlight"/>
                </xpath>

                <xpath expr="//field[@name='member_lines']/tree//field[@name='state']" position="after">
                    <field name="pause_date"/>
                    <field name="resume_date"/>
                    <button name="action_pause" type="object" string="Pause"
                            attrs="{'invisible':['|',('state','not in',['invoiced','paid']),('is_paused','=',True)]}"/>
                    <button name="action_resume" type="object" string="Resume"
                            attrs="{'invisible':['|',('state','not in',['invoiced','paid']),('is_resumed','=',True)]}"/>

                    <field name="is_paused" invisible="1"/>
                    <field name="is_resumed" invisible="1"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>