<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_partner_form_silver_update" model="ir.ui.view">
        <field name="name">res.partner.form.silver.update</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='website']" position="before">
                <field name="sec_mail" widget="email"/>
                <field name="gender"/>
            </xpath>
            <button name="toggle_active" position="before">
                <!--<button class="oe_stat_button" name="346" type="action" groups="purchase.group_purchase_user" attrs="{'invisible': [('supplier', '=', False)]}" icon="fa-shopping-cart">
                       <field string="Purchases" name="purchase_order_count" widget="statinfo"/>
                   </button>-->
               <!-- <button class="oe_stat_button" name="partner_document_action" type="object">
                    <field string="Supplier Catalog" name="doc_cnt" widget="statinfo"/>

                </button>-->
                 <button class="oe_stat_button" type="object" name="partner_document_action" icon="fa-list">
                       <field string="Supplier Catalog" name="doc_cnt" widget="statinfo"/>
                    </button>

                 <button class="oe_stat_button"  name="publish_project_docs" type="object" icon="fa-list">
                     <field string="Published Project Documents" name="publish_project_cnt" widget="statinfo"/>


                </button>
                 <button class="oe_stat_button"  name="partner_documents" type="object" icon="fa-list">
                     <field string="Related Documents" name="related_attachment_cnt" widget="statinfo"/>


                </button>

                <button class="oe_stat_button"  name="action_survey_results" type="object" icon="fa-star">
                     <field string="Survey Results" name="survey_cnt" widget="statinfo"/>


                </button>
            </button>
            <xpath expr="//field[@name='industry_id']" position="attributes">
                <attribute name="attrs">{}</attribute>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>
             <xpath expr="//field[@name='email']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>

             <xpath expr="//field[@name='city']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>

              <xpath expr="//field[@name='country_id']" position="attributes">
                <attribute name="required">1</attribute>
            </xpath>

        </field>
    </record>


    <record id="partner_document_form_view" model="ir.ui.view">
        <field name="name">partner.document.form.view</field>
        <field name="model">res.partner.document</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="doc_attachment_id"  class="oe_inline" widget="many2many_binary"
                               context="{'default_folder_id':8}"/>
                        <!--<field name="doc_attachment_id" widget="many2many_binary" class="oe_inline"
                               context="{'default_res':active_id}"/>-->

                        <field name="partner_id"/>
                        <field name="doc_cnt" invisible="1"/>

                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_document_tree_view" model="ir.ui.view">
        <field name="name">partner.document.tree.view</field>
        <field name="model">res.partner.document</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>


    <record id="partner_document_view_action" model="ir.actions.act_window">
        <field name="name">Supplier Catalog</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner.document</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

</odoo>