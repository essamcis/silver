<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="crm_case_tree_view_oppor" model="ir.ui.view">
            <field name="name">crm.lead.tree</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="opportunity_id"/>
                </xpath>
            </field>
        </record>
        <record id="crm_case_kanban_view_leads" model="ir.ui.view">
            <field name="name">crm.lead.kanban</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="opportunity_id"/>
                </xpath>
                <xpath expr="//div[@class='oe_kanban_content']/div[1]" position="after">
                    <div>
                       <field name="opportunity_type_line_id"/>
                    </div>
                    <div>
                       <field name="note"/>
                    </div>

                </xpath>

            </field>
        </record>

        <record id="quick_create_opportunity_form" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.quick_create_opportunity_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='name']" position="replace">
                    <field name="opportunity_id" options="{'no_open':True,'no_create':True}"/>
                    <field name="opportunity_type_line_id" options="{'no_open':True,'no_create':True}"/>
                    <field name="note"/>
                </xpath>

            </field>
        </record>
        <record id="crm_case_form_view_oppor" model="ir.ui.view">
            <field name="name">crm.lead.form</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">

                <xpath expr="//label[@for='name']" position="replace">

                </xpath>
                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="op_type"/>
                </xpath>

                <xpath expr="//div[@class='oe_title']/h1" position="replace">
                    <h2 class="o_row">
                        <div>
                            <label for="opportunity_id" class="oe_edit_only"/>
                            <div class="o_row">
                                <field name="opportunity_id"/>
                            </div>
                        </div>
                        <div>
                            <label for="opportunity_type_line_id" class="oe_edit_only"/>
                            <div class="o_row">
                                <field name="opportunity_type_line_id"/>
                            </div>
                        </div>
                        <div>
                            <label for="note" class="oe_edit_only"/>
                            <div class="o_row">
                                <field name="note"/>
                            </div>
                        </div>
                    </h2>
                </xpath>
                <xpath expr="//page[last()]" position="after">
                    <page string="Partners">
                        <group col="4">
                            <field name="consultant_id"/>
                            <field name="innterior_design_id"/>
                            <field name="construction_id"/>
                            <field name="developer_id"/>
                            <field name="electromechanical_id"/>
                            <field name="system_integrator_id"/>
                            <field name="project_manager_id"/>
                            <field name="owner_id"/>
                            <field name="other_id"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>