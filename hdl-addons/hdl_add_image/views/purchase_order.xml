<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="inherit_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">

                 <xpath expr="//div[hasclass('oe_button_box')]" position="after">
                     <field name="image" widget='image' class="oe_avatar float-right"/>
                </xpath>


            </field>
        </record>
        <record id="inherit_purchase_order_tree" model="ir.ui.view">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_view_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_status']" position="after">
                    <field name="image" widget='image' class="oe_avatar" width="30px" height="30px" />
                </xpath>

            </field>
        </record>
    </data>
</odoo>