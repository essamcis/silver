<odoo>
    <data>


        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']"
                       position="attributes">
                    <attribute name="sum">Total QTY</attribute>
                </xpath>

                <xpath expr="//field[@name='user_id']" position="after">
                    <field name="employee_id"/>
                </xpath>


                <xpath expr="//field[@name='order_line']/tree"
                       position="attributes">
                    <attribute name="editable">bottom</attribute>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']"
                       position="after">
                    <field name="available_qty"/>
                </xpath>

                <xpath expr="//field[@name='sale_order_template_id']"
                       position="after">
                    <field name="template_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="tag_ids" widget="many2many_tags"
                           options="{'no_create_edit': True}"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>