<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="edit_project_silver_project_update" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='user_id']" position="after">

                <field name="task_progress"/>

            </xpath>
             <xpath expr="//field[@name='company_id']" position="after">
                    <field name="shared" groups="base.group_system"/>

                </xpath>

        </field>
    </record>


    <!-- Inherit Form View to Modify it -->
    <record id="view_project_tree_silver_project" model="ir.ui.view">
        <field name="name">project.project.tree</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="task_progress" widget="progressbar"/>
            </xpath>

        </field>
    </record>
    
    <record id="project_task_view_form_inherited_silver" model="ir.ui.view">
        <field name="name">project.task.form.inherited.silver</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='project_id']" position="after">
                <field name="department_id"/>
            </xpath>
            
        </field>
    </record>
    
    
    
    <record id="project_task_view_form_inherited_kanban_silver" model="ir.ui.view">
        <field name="name">project.task.form.inherited.kanban.silver</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='project_id']" position="after">
                <br/><field name="department_id"/>
            </xpath>
            
        </field>
    </record>
</odoo>