<?xml version="1.0" encoding="utf-8"?>
<odoo>
       <record id="state_area_form" model="ir.ui.view">
            <field name="name">state_area_form</field>
            <field name="model">state.region</field>
            
            <field name="arch" type="xml">
                <form>
				  <group>
				    <field name="state_id" required="1"/>
					<field name="region1" required="1"/>
					<field name="region2" required="1"/>

					
					<field name="name" required="1"/>
				  </group>
				</form>
		    </field>
           
        </record>
		<record id="state_area_form1" model="ir.ui.view">
            <field name="name">state_area_form1</field>
            <field name="model">state.region1</field>
            
            <field name="arch" type="xml">
                <form>
				  <group>
				    <field name="state_id" required="1"/>
					<field name="name" required="1"/>
				  </group>
				</form>
		    </field>
           
        </record>
		<record id="state_area_form2" model="ir.ui.view">
            <field name="name">state_area_form2</field>
            <field name="model">state.region2</field>
            
            <field name="arch" type="xml">
                <form>
				  <group>
				    <field name="region1" required="1"/>
					
					<field name="name" required="1"/>
				  </group>
				</form>
		    </field>
           
        </record>
		 <record id="state_area_tree" model="ir.ui.view">
            <field name="name">state_area_tree</field>
            <field name="model">state.region</field>
            
            <field name="arch" type="xml">
                <tree>
				  <field name="state_id" required="1"/>
					<field name="region1" required="1"/>
					<field name="region2" required="1"/>

					
					<field name="name" required="1"/>
				  
				</tree>
		    </field>
           
        </record>
</odoo>